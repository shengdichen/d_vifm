" The environment variable $VIFM, if not explicitly set, is FIRST assumed to
" be, if existent,
"       $HOME/.vifm
" and would thus be equal to:
"       ~/.vifm
" if $HOME has not been set otherwise and the said location exists.


source $VIFM/conf/general/general.vifm



source $VIFM/conf/looks/display.vifm

source $VIFM/conf/looks/lines.vifm



source $VIFM/conf/commands/handlers.vifm

source $VIFM/conf/commands/bindings.vifm

" vim: filetype=vifm
