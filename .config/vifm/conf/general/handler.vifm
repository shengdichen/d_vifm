\*.mp3,*.m4a,*.m4b,
\*.wma,*.ac3,*.og[agx],*.spx,*.opus
    \ handler.sh "mpv" %f,

fileviewer
\ *.flac,*.wav,*.ape,
\*.mp3,*.m4a,*.m4b,
\*.wma,*.ac3,*.og[agx],*.spx,*.opus
    \ handler.sh "info_ffmpeg" %f,
" }}}

" vid {{{
