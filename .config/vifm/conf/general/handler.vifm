\ /^.*\.flac$/,/^.*\.wav$/,/^.*\.ape$/,
\/^.*\.mp3$/,/^.*\.m4[ab]$/,
\/^.*\.wma$/,/^.*\.ac3$/,/^.*\.og[agx]$/,/^.*\.spx$/,/^.*\.opus$/
    \ handler.sh "preview" "ffmpeg" %f,
" }}}

