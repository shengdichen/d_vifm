" pic {{{
filextype
\ /^.*\.png$/,/^.*\.svg$/,
\/^.*\.jpg$/,/^.*\.jpeg$/,/^.*\.bmp$/,/^.*\.webp$/,/^.*\.gif$/,/^.*\.xpm$/
\/^.*\.heifs?$/,/^.*\.heics?$/,/^.*\.avci$/,/^.*\.avcs$/,/^.*\.avif$/
    \ {imv}
    \ handler.sh "imv" %f,

fileviewer
\ /^.*\.png$/,/^.*\.svg$/,
\/^.*\.jpg$/,/^.*\.jpeg$/,/^.*\.bmp$/,/^.*\.webp$/,/^.*\.gif$/,/^.*\.xpm$/
\/^.*\.heifs?$/,/^.*\.heics?$/,/^.*\.avci$/,/^.*\.avcs$/,/^.*\.avif$/
