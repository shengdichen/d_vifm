filetype
\ /^.*\.tar$/,
\/^.*\.tar\.bz2?$/,/^.*\.tbz2?$/,
\/^.*\.bz2?$/,
\/^.*\.tar\.gz$/,/^.*\.t[ga]z$/,/^.*\.tar\.Z$/,
\/^.*\.g?z$/,
\/^.*\.tar\.[xl]z$/,/^.*\.t[xl]z$/,
\/^.*\.[xl]z$/,/^.*\.lzma$/,
\/^.*\.tar\.zst$/,
\/^.*\.zst$/,
\/^.*\.7z$/,/^.*\.iso$/
\/^.*\.zip$/,/^.*\.apkg?$/,/^.*\.[ejw]ar$/,
\/^.*\.rar$/,
